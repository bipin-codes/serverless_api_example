{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "ES2020",
        "outDir": ".build",
        "module": "ES2020",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "lib": ["es2015"],
        "esModuleInterop": true,
        "rootDir": "./",
        "declaration": true,
        "composite": true,
        "strict": true
    },
    "include": ["src"]
}
